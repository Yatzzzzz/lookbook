{
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/login",
      "rewrite": "/login",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/signup",
      "rewrite": "/signup",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/gallery",
      "rewrite": "/gallery",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/lookbook",
      "rewrite": "/lookbook",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/look",
      "rewrite": "/look",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/upload",
      "rewrite": "/upload",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/ai",
      "rewrite": "/ai",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/trends",
      "rewrite": "/trends",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/search",
      "rewrite": "/search",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/gemini-live",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With",
        "Access-Control-Max-Age": "3600"
      }
    },
    {
      "route": "/api/gemini-live-test",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With",
        "Access-Control-Max-Age": "3600"
      }
    },
    {
      "route": "/_next/static/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/static/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/_next/*", "/api/*"]
  },
  "responseOverrides": {
    "400": {
      "rewrite": "/400.html",
      "statusCode": 400
    },
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/forbidden.html",
      "statusCode": 403
    },
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://*.googleapis.com wss: ws:; img-src 'self' data: blob: https://*; media-src 'self' blob: https://*; connect-src 'self' wss: ws: https://*.generativelanguage.googleapis.com https://*.googleapis.com https://*.supabase.co",
    "Access-Control-Allow-Origin": "*",
    "X-Frame-Options": "SAMEORIGIN"
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "networking": {
    "allowedIpRanges": ["all"],
    "appliedRestrictions": "relaxed"
  },
  "websocket": {
    "enabled": true,
    "maxConnectionAge": 2592000,
    "maxMessageSize": 8192,
    "endpoints": [
      {
        "route": "/api/gemini-live",
        "maxConnectionsPerWorker": 100
      },
      {
        "route": "/api/gemini-live-test",
        "maxConnectionsPerWorker": 100
      }
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".css": "text/css",
    ".js": "text/javascript",
    ".html": "text/html",
    ".webmanifest": "application/manifest+json"
  }
} 